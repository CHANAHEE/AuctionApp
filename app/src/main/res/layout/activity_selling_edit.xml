<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.SellingEditActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/white">

            <TextView
                android:id="@+id/tv_appbar_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="판매글 쓰기"
                android:layout_gravity="center"
                android:textSize="20sp"
                android:fontFamily="@font/brandfont"
                android:textStyle="bold"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_complete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="완 료"
                android:background="@null"
                android:layout_gravity="right"
                android:fontFamily="@font/brandfont"
                android:textStyle="bold"
                android:textSize="13sp"
                android:textColor="@color/brand"/>

        </androidx.appcompat.widget.Toolbar>

    </com.google.android.material.appbar.AppBarLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/appbar">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/linear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp">

                <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <ImageButton
                    android:id="@+id/ib_picture"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/camera"
                    android:background="@drawable/bg_selectimage_sellingedit"
                    />
            </LinearLayout>

            <View
                android:id="@+id/view1"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#997A7A7A"
                android:layout_below="@id/linear"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"/>


            <EditText
                android:id="@+id/et_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_below="@id/view1"
                android:background="@drawable/bg_edit"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:padding="8dp"
                android:hint="글 제목"
                android:maxEms="15"
                android:textSize="16sp"
                android:inputType="text"
                android:textColorHint="#4A000000"
                android:fontFamily="@font/brandfont"
                android:textStyle="bold"/>

            <RelativeLayout
                android:id="@+id/category_relative"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/et_title">
                <TextView
                    android:id="@+id/tv_category"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="카테고리"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="20dp"
                    android:textSize="16sp"
                    android:textColor="#61000000"
                    android:fontFamily="@font/brandfont"
                    android:textStyle="bold"/>

                <ImageButton
                    android:id="@+id/ib_select_category"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_action_select"
                    android:layout_alignParentRight="true"
                    android:layout_alignTop="@id/tv_category"
                    android:background="@null"
                    android:layout_marginBottom="10dp"
                    android:layout_marginRight="30dp"/>
            </RelativeLayout>


            <EditText
                android:id="@+id/et_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/category_relative"
                android:background="@drawable/bg_edit"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="30dp"
                android:padding="8dp"
                android:hint="가  격"
                android:inputType="text"
                android:textSize="16sp"
                android:textColorHint="#4A000000"
                android:fontFamily="@font/brandfont"
                android:textStyle="bold"/>

            <EditText
                android:id="@+id/et_decription"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_below="@id/et_price"
                android:background="@drawable/bg_edit"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="20dp"
                android:padding="8dp"
                android:hint="상품 설명"
                android:gravity="top"
                android:inputType="textMultiLine"
                android:lines="8"
                android:maxLines="10"
                android:textSize="16sp"
                android:textColorHint="#4A000000"
                android:fontFamily="@font/brandfont"
                android:textStyle="bold"/>

            <RelativeLayout
                android:id="@+id/select_pos_relative"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/et_decription">
                <TextView
                    android:id="@+id/tv_select_pos"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="거래 희망 장소"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="20dp"
                    android:textSize="16sp"
                    android:textColor="#B5000000"
                    android:fontFamily="@font/brandfont"
                    android:textStyle="bold"/>

                <ImageButton
                    android:id="@+id/ib_select_position"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_action_select"
                    android:layout_alignParentRight="true"
                    android:layout_alignTop="@id/tv_select_pos"
                    android:background="@null"
                    android:layout_marginBottom="10dp"
                    android:layout_marginRight="30dp"/>
            </RelativeLayout>

            <View
                android:id="@+id/view2"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#997A7A7A"
                android:layout_below="@id/select_pos_relative"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"/>

            <RadioGroup
                android:id="@+id/rg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/view2"
                android:orientation="horizontal"
                android:gravity="center"
                android:padding="10dp">

                <RadioButton
                    android:id="@+id/rb1_selling"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/brandfont"
                    android:text="즉시 판매"
                    android:textStyle="bold"
                    android:checked="true"
                    android:textSize="15sp"/>

                <View
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"/>

                <RadioButton
                    android:id="@+id/rb2_bid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/brandfont"
                    android:text="경매로 올리기"
                    android:textStyle="bold"
                    android:textSize="15sp"/>

            </RadioGroup>
        </RelativeLayout>


    </ScrollView>




</RelativeLayout>