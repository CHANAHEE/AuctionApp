<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    tools:context=".activities.LoginActivity"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/login_rootview"
    android:layout_weight="1"
    >


    <ImageView
        android:id="@+id/iv_logo"
        android:layout_width="200dp"
        android:layout_height="170dp"
        android:src="@drawable/logoimage"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        />

    <TextView
        android:id="@+id/tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="간편하게 로그인 하기"
        android:layout_below="@id/iv_logo"
        android:fontFamily="@font/brandfont"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp"/>

    <LinearLayout
        android:id="@+id/layout_login_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/tv"
        android:gravity="center"
        android:layout_marginBottom="16dp">

        <ImageView
            android:id="@+id/iv_login_kakao"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/icon_kakako"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"/>

        <ImageView
            android:id="@+id/iv_login_google"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/icon_google"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"/>

        <ImageView
            android:id="@+id/iv_login_naver"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/icon_naver"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"/>
    </LinearLayout>

    <EditText
        android:id="@+id/et_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/layout_login_btn"
        android:fontFamily="@font/brandfont"
        android:layout_marginRight="40dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="20dp"
        android:textStyle="bold"
        android:padding="10dp"
        android:textCursorDrawable="@drawable/bg_edit"
        android:background="@drawable/bg_edit"
        android:inputType="textEmailAddress"
        android:hint="ID"
        />
    <EditText
        android:id="@+id/et_pass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/et_id"
        android:fontFamily="@font/brandfont"
        android:layout_marginRight="40dp"
        android:layout_marginLeft="40dp"
        android:textStyle="bold"
        android:padding="10dp"
        android:layout_marginTop="10dp"
        android:textCursorDrawable="@drawable/bg_edit"
        android:background="@drawable/bg_edit"
        android:inputType="textPassword"
        android:hint="Password"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_login"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_btn"
        android:fontFamily="@font/brandfont"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:text="로 그 인"
        android:layout_below="@id/et_pass"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:textStyle="bold"/>





    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_signup"
        android:layout_width="170dp"
        android:layout_height="35dp"
        android:background="@drawable/bg_btn"
        android:backgroundTint="#A9E860"
        android:fontFamily="@font/brandfont"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:text="가 입 하 기"
        android:layout_below="@id/btn_login"
        android:layout_marginTop="25dp"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"/>


</RelativeLayout>
