<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="400dp"
    android:layout_gravity="bottom"
    android:background="#DFDFDF">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="입찰가 선택"
        android:layout_above="@id/tv_price"
        android:fontFamily="@font/brandfont"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginTop="20dp"/>

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/cancel"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@id/tv_title"
        android:layout_marginRight="20dp"/>

    <TextView
        android:id="@+id/tv_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="20000원"
        android:layout_above="@id/btn_price1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/brandfont"
        android:textStyle="bold"
        android:textSize="20sp"/>


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_price1"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_btn"
        android:backgroundTint="#AABD93"
        android:layout_above="@id/btn_price2"
        android:fontFamily="@font/brandfont"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:text="21000원"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:textStyle="bold"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_price2"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_btn"
        android:backgroundTint="#AABD93"
        android:layout_above="@id/btn_price3"
        android:fontFamily="@font/brandfont"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:text="22000원"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:textStyle="bold"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_price3"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_btn"
        android:backgroundTint="#AABD93"
        android:layout_above="@id/btn_bid"
        android:fontFamily="@font/brandfont"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:text="23000원"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:textStyle="bold"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_bid"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_btn"
        android:fontFamily="@font/brandfont"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:text="입  찰  하  기"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:textStyle="bold"/>
</RelativeLayout>