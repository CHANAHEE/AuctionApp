<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.HomeDetailActivity">

    <RelativeLayout
        android:id="@+id/container_pager"
        android:layout_width="match_parent"
        android:layout_height="280dp">

        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/pager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/teal_700"/>

        <ImageButton
            android:id="@+id/btn_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:src="@drawable/ic_action_back"
            android:layout_margin="10dp"
            />
        <com.tbuonomo.viewpagerdotsindicator.DotsIndicator
            android:id="@+id/dots_indicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:dotsColor="#248513"
            app:selectedDotColor="@color/brand"
            app:dotsCornerRadius="8dp"
            app:dotsSize="8dp"
            app:dotsSpacing="4dp"
            app:dotsWidthFactor="2.5"
            app:progressMode="true"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:padding="20dp"
            />
    </RelativeLayout>




    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/civ_profile"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@mipmap/ic_launcher_round"
        android:layout_below="@id/container_pager"
        android:layout_margin="20dp"/>

    <TextView
        android:id="@+id/tv_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="판매자 ID"
        android:layout_toRightOf="@id/civ_profile"
        android:layout_alignTop="@id/civ_profile"
        android:textSize="17sp"
        android:textStyle="bold"
        android:layout_marginTop="5dp"
        />

    <TextView
        android:id="@+id/tv_town_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="동네 이름"
        android:layout_toRightOf="@id/civ_profile"
        android:layout_below="@id/tv_id"
        android:textSize="13sp"
        android:layout_marginTop="5dp"
        />

    <View
        android:id="@+id/view1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/tv_town_info"
        android:background="#3C000000"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        />

    <TextView
        android:id="@+id/tv_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="상품명"
        android:textSize="20sp"
        android:layout_below="@id/view1"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/tv_category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="카테고리"
        android:textSize="12sp"
        android:layout_below="@id/tv_item_name"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="20dp"/>

    <TextView
        android:id="@+id/tv_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="상품내용"
        android:textSize="15sp"
        android:layout_below="@id/tv_category"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="20dp"/>

    <View
        android:id="@+id/view2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_above="@id/btn_chat"
        android:background="#3C000000"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        />


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_chat"
        android:layout_width="110dp"
        android:layout_height="35dp"
        android:background="@drawable/bg_btn"
        android:fontFamily="@font/brandfont"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:text="채 팅 하 기"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="15dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp"
        android:textStyle="bold"/>

    <View
        android:id="@+id/view3"
        android:layout_width="1dp"
        android:layout_height="50dp"
        android:background="#3C000000"
        android:layout_toRightOf="@id/ib_fav"
        android:layout_below="@id/view2"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="20dp"
        />

    <ImageButton
        android:id="@+id/ib_fav"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:background="@drawable/bg_fav"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="30dp"
        />

    <TextView
        android:id="@+id/tv_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/view3"
        android:text="상품가격"
        android:layout_alignParentBottom="true"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginBottom="25dp"
        android:layout_marginLeft="10dp"/>
</RelativeLayout>