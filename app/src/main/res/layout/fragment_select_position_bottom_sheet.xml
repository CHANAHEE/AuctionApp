<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="230dp"
    android:layout_gravity="bottom"
    android:background="#DFDFDF"
    style="@style/DialogStyle"
    >

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="선택한 곳의 장소명을 입력해주세요"
        android:layout_above="@id/et_select_location"
        android:fontFamily="@font/brandfont"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="30dp"/>

    <EditText
        android:id="@+id/et_select_location"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/bg_edit"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:textCursorDrawable="@drawable/edit_cursor"
        android:inputType="text"
        android:maxLength="10"
        android:paddingLeft="10dp"
        android:layout_above="@id/btn_select_position"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_select_position"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_btn"
        android:fontFamily="@font/brandfont"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:text="거 래  장 소  등 록"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:enabled="false"
        android:backgroundTint="@color/unable"
        android:textStyle="bold"/>
</RelativeLayout>