<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="230dp"
    android:padding="16dp"
    android:background="#8D96DB8A">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/iv_nav_profile"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@color/black"/>
    <TextView
        android:id="@+id/tv_nav_nickname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="android"
        android:textSize="20sp"
        android:textColor="#979494"
        android:layout_below="@id/iv_nav_profile"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="8dp"/>
    <TextView
        android:id="@+id/tv_nav_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="android@google.com"
        android:textColor="#979494"
        android:layout_below="@id/tv_nav_nickname"
        android:layout_marginLeft="8dp"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_edit_profile"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:background="@drawable/bg_btn"
        android:fontFamily="@font/brandfont"
        android:textColor="@color/white"
        android:textSize="17sp"
        android:text="프 로 필   설 정"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:textStyle="bold"/>

</RelativeLayout>