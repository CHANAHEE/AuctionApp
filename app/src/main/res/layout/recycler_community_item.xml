<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="10dp">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/brandfont"
        android:textSize="16sp"
        android:text="글 제목"
        android:maxEms="13"
        android:maxLines="1"
        android:ellipsize="end"
        android:textColor="@color/black"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/tv_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/brandfont"
        android:textSize="10sp"
        android:text="동네 이름"
        android:textStyle="bold"
        android:textColor="#8F8F8F"
        android:layout_marginTop="5dp"
        android:layout_below="@id/tv_title"/>

    <TextView
        android:id="@+id/tv_contents"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/brandfont"
        android:textSize="12sp"
        android:text="글 내용"
        android:textStyle="bold"
        android:textColor="#8F8F8F"
        android:maxEms="18"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_marginTop="10dp"
        android:layout_below="@id/tv_location"/>


    <LinearLayout
        android:id="@+id/linear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_contents"
        android:layout_marginTop="18dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/iv_fav"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="@drawable/bg_fav"/>

        <TextView
            android:id="@+id/tv_fav_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="5dp"
            android:text="10"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/linear"
        android:layout_alignTop="@id/linear"
        android:layout_marginLeft="13dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/iv_comments"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="@drawable/comment"/>

        <TextView
            android:id="@+id/tv_comments_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="5dp"
            android:text="3"/>
    </LinearLayout>

    <ImageView
        android:id="@+id/iv_image"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:scaleType="fitXY"
        android:src="@drawable/_0"/>
    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#CFCFCF"
        android:layout_below="@id/linear"
        android:layout_marginTop="10dp"/>
</RelativeLayout>