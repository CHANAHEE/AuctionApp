<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    tools:context=".activities.SNSLoginActivity"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/login_rootview"
    android:layout_weight="1">


    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_logo"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:src="@drawable/mingle_logo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:scaleType="fitXY" />

    <TextView
        android:id="@+id/tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="간편하게 로그인 하기"
        android:layout_below="@id/iv_logo"
        android:fontFamily="@font/brandfont"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp"/>

    <LinearLayout
        android:id="@+id/layout_login_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/tv"
        android:gravity="center"
        android:layout_marginBottom="16dp">

        <ImageView
            android:id="@+id/iv_login_kakao"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/icon_kakako"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"/>

        <ImageView
            android:id="@+id/iv_login_google"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/icon_google"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"/>

        <ImageView
            android:id="@+id/iv_login_naver"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/icon_naver"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"/>

    </LinearLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_login"
        android:layout_width="200dp"
        android:layout_height="35dp"
        android:background="@drawable/bg_btn"
        android:fontFamily="@font/brandfont"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:text="이메일로 로그인"
        android:layout_below="@id/btn_without_login"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:textStyle="bold"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_without_login"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:padding="4dp"
        android:background="@drawable/bg_btn"
        android:backgroundTint="#B3B3B3"
        android:fontFamily="@font/brandfont"
        android:textColor="@color/black"
        android:textSize="12sp"
        android:text="앱   둘 러 보 기"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_below="@id/layout_login_btn"
        android:layout_marginBottom="10dp"
        android:textStyle="bold"/>

</RelativeLayout>
